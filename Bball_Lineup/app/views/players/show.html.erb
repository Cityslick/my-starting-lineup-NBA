<h1>Individual Player</h1>

<div class="single_player_container">
    <div class="player_card">
        <div class="player_pic"><img src=<%=@player_id.picture%> class="player_headshot" />
            <div class="team_logo"><img src=<%= @player_team[:logo] %> /></div>  
        </div>
        <div class="player_info">
            <div><h2><%= @player_id.name %><h2></div>
            <div><%= @player_id.position %></div>
            <div><%= @player_id.height %></div>
            <div><%= @player_id.weight %></div>
            <div><%= @player_team[:name] %></div>
            <%= link_to 'Edit Player', edit_player_path %>
            <a href="javascript:history.back()">All Players</a>
        </div>
    </div>
</div>
